<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:backgroundTint="@color/neutral_200"
    tools:context=".Notifications.NotificationActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notif_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_notifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Notifikasi"
            android:textColor="@color/neutral_500"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/ic_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_notifikasi"
            app:layout_constraintBottom_toBottomOf="@id/tv_notifikasi"
            app:layout_constraintStart_toEndOf="@id/tv_notifikasi"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/tv_notifications_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ic_notif"
            app:layout_constraintBottom_toBottomOf="@id/ic_notif"
            app:layout_constraintStart_toStartOf="@id/ic_notif"
            app:layout_constraintEnd_toEndOf="@id/ic_notif"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_100"
            tools:text="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/notif_header"
        app:layout_constraintBottom_toBottomOf="@id/notif_header"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/notif_header"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_daily_notif"/>
</androidx.constraintlayout.widget.ConstraintLayout>