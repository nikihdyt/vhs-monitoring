<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="21.74dp"
    android:paddingHorizontal="24dp"
    tools:context=".Approval.Approval"
    android:id="@+id/card_approval">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary_200"
        android:elevation="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tv_card_header"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/primary_200"
                android:textColor="@color/neutral_500"
                android:textStyle="bold"
                android:text="TITLE"/>

            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>
                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.62sp"
                    android:textStyle="bold"
                    android:lineHeight="20.4sp"
                    android:textColor="@color/primary_700"
                    android:text="September, 2022"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/logo_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_customer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/view_customer_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/logo_customer"
                    app:layout_constraintStart_toEndOf="@id/logo_customer"
                    app:layout_constraintTop_toTopOf="@id/logo_customer">

                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PT Shell Indonesia"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_customer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Bekasi Regency, West Java 17211"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_customer_stok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Stok: Solar"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/card_overview_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16.37dp"
                    android:backgroundTint="@color/primary_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_customer_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/approval_data_info"
                android:paddingRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.46" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.53" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.76" />

                <TextView
                    android:id="@+id/tv_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Current Stock"/>
                <TextView
                    android:id="@+id/tv_current_stock_amount_arrived_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/tv_current_stock"
                    android:text="50kL"/>
                <ImageButton
                    android:id="@+id/btn_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock_amount_arrived_stock"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_stock_amount_arrived_stock"
                    app:layout_constraintStart_toEndOf="@id/tv_current_stock_amount_arrived_stock"
                    android:background="@drawable/ic_current_stock"/>

                <TextView
                    android:id="@+id/tv_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q1"
                    android:text="Delivered"/>
                <TextView
                    android:id="@+id/tv_delivered_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_delivered"
                    app:layout_constraintStart_toStartOf="@id/tv_delivered"
                    android:text="1000kL"/>
                <TextView
                    android:id="@+id/tv_arrived_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q2"
                    android:text="ArrivedStock"/>
                <TextView
                    android:id="@+id/tv_arrived_stock_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_arrived_stock"
                    app:layout_constraintStart_toStartOf="@id/tv_arrived_stock"
                    android:text="950kL"/>

                <TextView
                    android:id="@+id/daily_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_center"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    android:text="Daily Pickup"/>
                <TextView
                    android:id="@+id/daily_pickup_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/daily_pickup"
                    app:layout_constraintStart_toStartOf="@id/daily_pickup"
                    android:text="1000kL"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_approval_confirmation"
                android:paddingRight="32dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_approval_has_been_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_success_message"/>
                <TextView
                    android:id="@+id/tv_confirmation_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_500"
                    android:lineHeight="18sp"
                    android:letterSpacing="0.08"
                    app:layout_constraintTop_toTopOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintBottom_toBottomOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintEnd_toStartOf="@id/ic_approval_has_been_sent"
                    android:text="(CNFIRMATION MESSAGE)"/>
                <TextView
                    android:id="@+id/tv_approved_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_500"
                    android:lineHeight="18sp"
                    app:layout_constraintTop_toBottomOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="by ... at ... "/>


                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_200"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="13dp"
                    android:textSize="12sp"
                    android:lineHeight="18sp"
                    app:iconTint="@color/primary_700"
                    android:textColor="@color/primary_700"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_close"
                    android:text="CLOSE"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@id/tv_approved_by"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:focusable="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/neutral_100"
                    android:outlineSpotShadowColor="@color/neutral_100"
                    android:textColor="@color/primary_700"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:lineHeight="18sp"
                    android:letterSpacing="0.08"
                    android:padding="0dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="@id/btn_close"
                    app:layout_constraintBottom_toBottomOf="@id/btn_close"
                    app:layout_constraintEnd_toStartOf="@id/btn_close"
                    android:text="@string/overview"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.cardview.widget.CardView>