<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10.47dp"
    android:backgroundTint="@color/primary_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="11dp">

        <ImageView
            android:id="@+id/logo_customer"
            android:layout_width="47.42dp"
            android:layout_height="47.42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/logo_customer"/>
        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:lineHeight="3.9sp"
            android:textColor="@color/primary_700"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="9.33dp"
            app:layout_constraintTop_toTopOf="@id/logo_customer"
            app:layout_constraintStart_toEndOf="@id/logo_customer"
            android:text="PT Shell Indonesia"/>
        <TextView
            android:id="@+id/tv_stock_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_400"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
            app:layout_constraintStart_toStartOf="@id/tv_customer_name"
            android:text="Stok: Solar"/>
        <ImageView
            android:id="@+id/btn_input_stock_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>