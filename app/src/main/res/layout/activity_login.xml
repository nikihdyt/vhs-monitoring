<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_700"
    android:fitsSystemWindows="true"
    tools:context=".login.LoginActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_above="@id/loginCard"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:tabIndicator="@drawable/ic_backround_image_indicator"
        app:tabBackground="@drawable/ic_backround_image_indicator_1"
        app:tabIndicatorColor="@color/primary_200"
        app:tabIndicatorGravity="center"
        app:tabMaxWidth="20dp"
        app:tabGravity="center">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_background_rounded">

        <TextView
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/masuk"
            android:textColor="@color/primary_700"
            android:textSize="32sp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/nomorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headingText"
            android:drawableLeft="@drawable/ic_masseges"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:hint="@string/nomor_id"
            android:textSize="20sp"
            android:textColor="@color/primary_700"
            android:inputType="textPersonName"
            android:autoSizeTextType="uniform"/>

        <EditText
            android:id="@+id/kataSandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomorID"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:drawableLeft="@drawable/ic_locked"
            android:drawableRight="@drawable/ic_password_visibilities"
            android:drawablePadding="10dp"
            android:hint="@string/sandi"
            android:textSize="20sp"
            android:textColor="@color/primary_700"
            android:inputType="textPassword"
            android:autoSizeTextType="uniform"/>

        <LinearLayout
            android:id="@+id/sandiSegment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kataSandi"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/primary_700"
                android:textColor="@color/primary_700"
                android:text="@string/ingat_saya"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lupa_kata_sandi"
                android:textColor="@color/primary_700"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:autoSizeTextType="uniform"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sandiSegment"
            android:text="@string/masuk"
            android:background="@drawable/ic_background_rounded_button"
            android:foreground="?attr/selectableItemBackground"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:autoSizeTextType="uniform"/>
    </RelativeLayout>

</RelativeLayout>