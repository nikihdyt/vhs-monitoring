<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".Beranda">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="180dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@id/img_user_profile"
        app:layout_constraintEnd_toEndOf="@id/img_user_profile" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/img_user_profile"
        app:layout_constraintStart_toEndOf="@id/img_user_profile"
        app:layout_constraintTop_toTopOf="@id/img_user_profile">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="48sp"
            android:text="Zayn Malik"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="18sp"
            android:text="287-HANDLER-1A"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/ic_notification_false"
        app:layout_constraintBottom_toBottomOf="@id/img_user_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_user_profile"
        android:focusable="true" />

    <ImageView
        android:id="@+id/ic_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_user_profile" />

    <TextView
        android:id="@+id/tv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_700"
        android:lineHeight="20.4sp"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@id/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/ic_calendar"
        app:layout_constraintStart_toEndOf="@id/ic_calendar"
        android:text="19/09/2022"/>

    <ImageView
        android:id="@+id/ic_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/ic_calendar"
        app:layout_constraintEnd_toStartOf="@id/tv_tasks"
        android:src="@drawable/ic_tasks"/>

    <TextView
        android:id="@+id/tv_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/tertiary_200"
        android:lineHeight="20.4sp"
        app:layout_constraintTop_toTopOf="@id/ic_tasks"
        app:layout_constraintBottom_toBottomOf="@id/ic_tasks"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="19"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary_200"
        android:elevation="20dp"
        app:cardCornerRadius="10.4dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/ic_calendar"
        app:layout_constraintStart_toStartOf="@id/ic_calendar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_q2_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <ImageView
                android:id="@+id/ic_approval_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_pusat_approval_needed"/>
            <TextView
                android:id="@+id/tv_approval_needed_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary_200"
                app:layout_constraintTop_toTopOf="@id/ic_approval_needed"
                app:layout_constraintBottom_toBottomOf="@id/ic_approval_needed"
                app:layout_constraintStart_toEndOf="@id/ic_approval_needed"
                android:text="15"/>
            <TextView
                android:id="@+id/tv_str_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/ic_approval_needed"
                app:layout_constraintStart_toStartOf="@id/ic_approval_needed"
                android:text="Approval"/>
            <TextView
                android:id="@+id/tv_str_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/tv_str_approval"
                app:layout_constraintStart_toStartOf="@id/ic_approval_needed"
                android:text="Needed"/>

            <ImageView
                android:id="@+id/ic_stock_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_q2_card_status"
                android:src="@drawable/ic_pusat_stock_request"/>
            <TextView
                android:id="@+id/tv_stock_request_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary_200"
                app:layout_constraintTop_toTopOf="@id/ic_approval_needed"
                app:layout_constraintBottom_toBottomOf="@id/ic_approval_needed"
                app:layout_constraintStart_toEndOf="@id/ic_stock_request"
                android:text="15"/>
            <TextView
                android:id="@+id/tv_str_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/ic_stock_request"
                app:layout_constraintStart_toStartOf="@id/ic_stock_request"
                android:text="Stock"/>
            <TextView
                android:id="@+id/tv_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/tv_str_stock"
                app:layout_constraintStart_toStartOf="@id/ic_stock_request"
                android:text="Request"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_status_active_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_200"
        app:cardCornerRadius="10.4dp"
        app:layout_constraintTop_toTopOf="@id/card_status"
        app:layout_constraintBottom_toBottomOf="@id/card_status"
        app:layout_constraintStart_toStartOf="@id/guideline_q1"
        app:layout_constraintEnd_toStartOf="@id/guideline_q2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="18dp"
            android:paddingHorizontal="24dp">

            <ImageView
                android:id="@+id/ic_active_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pusat_active_transaction"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_active_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toTopOf="@id/ic_active_transaction"
                app:layout_constraintBottom_toBottomOf="@id/ic_active_transaction"
                app:layout_constraintStart_toEndOf="@id/ic_active_transaction"
                android:text="32"/>
            <TextView
                android:id="@+id/tv_str_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/ic_active_transaction"
                app:layout_constraintStart_toStartOf="@id/ic_active_transaction"
                android:text="Active"/>
            <TextView
                android:id="@+id/tv_str_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineHeight="20.4sp"
                android:textColor="@color/primary_700"
                app:layout_constraintTop_toBottomOf="@id/tv_str_active"
                app:layout_constraintStart_toStartOf="@id/ic_active_transaction"
                android:text="Transaction"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_stock_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:lineHeight="20.4sp"
        android:textStyle="bold"
        android:textColor="@color/primary_700"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_status_active_transaction"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Stock Request"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_stock_request"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_request"
        app:layout_constraintStart_toStartOf="@id/tv_stock_request"/>


    <TextView
        android:id="@+id/tv_approval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.51dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:lineHeight="20.4sp"
        android:textColor="@color/primary_700"
        app:layout_constraintTop_toBottomOf="@id/vp_stock_request"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Approval"/>

    <ImageView
        android:id="@+id/ic_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_approval"
        app:layout_constraintStart_toStartOf="@id/tv_approval"
        android:src="@drawable/ic_filter" />

    <LinearLayout
        android:id="@+id/group_histories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ic_filter"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="@id/ic_filter"
        app:layout_constraintBottom_toBottomOf="@id/ic_filter">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_approval_daily_pickup"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="18dp"
            android:backgroundTint="@color/primary_700"
            android:textColor="@color/neutral_100"
            android:textSize="12sp"
            android:text="Daily Pickup"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_approval_arrived_stock"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="7dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="18dp"
            android:backgroundTint="@color/neutral_100"
            android:textColor="@color/primary_700"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_700"
            android:textSize="12sp"
            android:text="Arrived Stock" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_approval_stock_opname"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="7dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="18dp"
            android:backgroundTint="@color/neutral_100"
            android:textColor="@color/primary_700"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_700"
            android:textSize="12sp"
            android:text="Arrived Stock" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_approval_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:lineHeight="18sp"
        android:textColor="@color/primary_700"
        app:layout_constraintTop_toBottomOf="@id/ic_filter"
        app:layout_constraintStart_toStartOf="@id/tv_approval"
        android:text="17 SEPT"/>

    <include layout="@layout/item_card_approval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_approval_date"
        app:layout_constraintStart_toStartOf="@id/tv_approval"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_card_approval_needed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/tv_approval_date"
        app:layout_constraintStart_toStartOf="@id/tv_approval"
        tools:listitem="@layout/item_card_approval"/>


</androidx.constraintlayout.widget.ConstraintLayout>