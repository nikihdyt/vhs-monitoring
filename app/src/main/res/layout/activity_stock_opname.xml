<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="21.74dp"
    android:paddingHorizontal="24dp"
    tools:context=".InputData.Restock"
    android:id="@+id/card_stock_opname">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary_200"
        android:elevation="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/primary_200"
                android:textColor="@color/neutral_500"
                android:textStyle="bold"
                android:text="STOCK OPNAME"/>

            <LinearLayout
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>
                <TextView
                    android:id="@+id/tv_stock_opname_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.62sp"
                    android:textStyle="bold"
                    android:lineHeight="20.4sp"
                    android:textColor="@color/primary_700"
                    android:text="September, 2022"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            <ImageView
                android:id="@+id/logo_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_customer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/view_customer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/logo_customer"
                app:layout_constraintStart_toEndOf="@id/logo_customer"
                app:layout_constraintTop_toTopOf="@id/logo_customer">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT Shell Indonesia"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Bekasi Regency, West Java 17211"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_customer_stok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Stok: Solar"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/card_overview_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16.37dp"
                android:backgroundTint="@color/primary_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_customer_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stock_opname_input_tank_rest"
                android:paddingRight="32dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.46" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.76" />

                <TextView
                    android:id="@+id/tv_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Current Stock"/>
                <TextView
                    android:id="@+id/tv_current_stock_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_200"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/tv_current_stock"
                    android:text="50kL"/>
                <ImageButton
                    android:id="@+id/btn_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock_amount"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_stock_amount"
                    app:layout_constraintStart_toEndOf="@id/tv_current_stock_amount"
                    android:background="@drawable/ic_current_stock"/>

                <TextView
                    android:id="@+id/tv_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q1"
                    android:text="Capacity"/>
                <TextView
                    android:id="@+id/tv_capacity_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                    app:layout_constraintStart_toStartOf="@id/tv_capacity"
                    android:text="1000kL"/>


                <TextView
                    android:id="@+id/tv_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q2"
                    android:text="Sold"/>
                <TextView
                    android:id="@+id/tv_sold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_sold"
                    app:layout_constraintStart_toStartOf="@id/tv_sold"
                    android:text="950kL"/>

                <ImageView
                    android:id="@+id/ic_input_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_overview_status"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_stock_amount"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toTopOf="@id/ic_input_tank_rest"
                    app:layout_constraintBottom_toBottomOf="@id/ic_input_tank_rest"
                    app:layout_constraintStart_toEndOf="@id/ic_input_tank_rest"
                    android:text="TANK REST"/>

                <EditText
                    android:id="@+id/et_input_data"
                    android:layout_width="146dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="11dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:background="@color/primary_200"
                    app:layout_constraintTop_toBottomOf="@id/tv_tank_rest"
                    app:layout_constraintStart_toStartOf="@id/tv_tank_rest"/>

                <ImageButton
                    android:id="@+id/btn_send_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintTop_toTopOf="@id/et_input_data"
                    app:layout_constraintBottom_toBottomOf="@id/et_input_data"
                    app:layout_constraintStart_toEndOf="@id/et_input_data"
                    android:background="@drawable/ic_send"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stock_opname_send_approval"
                android:paddingRight="32dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />


                <TextView
                    android:id="@+id/tv_stock_opname_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Sold"/>
                <TextView
                    android:id="@+id/tv_stock_opname_sold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_stock_opname_sold"
                    app:layout_constraintStart_toStartOf="@id/tv_stock_opname_sold"
                    android:text="950kL"/>
                <TextView
                    android:id="@+id/stock_opname_daily_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toBottomOf="@id/tv_stock_opname_sold_amount"
                    app:layout_constraintStart_toStartOf="@id/tv_stock_opname_sold"
                    android:text="Daily Pickup"/>
                <ImageButton
                    android:id="@+id/btn_go_to_daily_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintTop_toTopOf="@id/stock_opname_daily_pickup"
                    app:layout_constraintBottom_toBottomOf="@id/stock_opname_daily_pickup"
                    app:layout_constraintStart_toEndOf="@id/stock_opname_daily_pickup"
                    android:background="@drawable/ic_expand"/>

                <TextView
                    android:id="@+id/stock_opname_delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_center"
                    app:layout_constraintTop_toTopOf="@id/tv_stock_opname_sold"
                    android:text="Delivered"/>
                <TextView
                    android:id="@+id/stock_opname_delivered_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/stock_opname_delivered"
                    app:layout_constraintStart_toStartOf="@id/stock_opname_delivered"
                    android:text="1000kL"/>
                <TextView
                    android:id="@+id/stock_opname_arrived_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toBottomOf="@id/stock_opname_delivered_amount"
                    app:layout_constraintStart_toStartOf="@id/stock_opname_delivered"
                    android:text="Arrived Stock"/>
                <ImageButton
                    android:id="@+id/btn_go_to_arrived_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintTop_toTopOf="@id/stock_opname_arrived_stock"
                    app:layout_constraintBottom_toBottomOf="@id/stock_opname_arrived_stock"
                    app:layout_constraintStart_toEndOf="@id/stock_opname_arrived_stock"
                    android:background="@drawable/ic_expand"/>

                <ImageView
                    android:id="@+id/ic_stock_opname_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_overview_status"
                    app:layout_constraintTop_toBottomOf="@id/stock_opname_daily_pickup"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_stock_opname_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toTopOf="@id/ic_stock_opname_current_stock"
                    app:layout_constraintBottom_toBottomOf="@id/ic_stock_opname_current_stock"
                    app:layout_constraintStart_toEndOf="@id/ic_stock_opname_current_stock"
                    android:text="CURRENT STOCK"/>
                <TextView
                    android:id="@+id/tv_stock_opname_current_stock_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_200"
                    app:layout_constraintTop_toTopOf="@id/tv_stock_opname_current_stock"
                    app:layout_constraintBottom_toBottomOf="@id/tv_stock_opname_current_stock"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="50kL"/>

                <ImageView
                    android:id="@+id/ic_stock_opname_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_overview_status"
                    app:layout_constraintTop_toBottomOf="@id/ic_stock_opname_current_stock"
                    app:layout_constraintStart_toStartOf="@id/ic_stock_opname_current_stock"/>
                <TextView
                    android:id="@+id/tv_stock_opname_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toTopOf="@id/ic_stock_opname_tank_rest"
                    app:layout_constraintBottom_toBottomOf="@id/ic_stock_opname_tank_rest"
                    app:layout_constraintStart_toEndOf="@id/ic_stock_opname_current_stock"
                    android:text="TANK REST"/>
                <TextView
                    android:id="@+id/tv_stock_opname_tank_rest_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_200"
                    app:layout_constraintTop_toTopOf="@id/tv_stock_opname_tank_rest"
                    app:layout_constraintBottom_toBottomOf="@id/tv_stock_opname_tank_rest"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="40kL"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/losses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/primary_200"
                    app:layout_constraintTop_toBottomOf="@id/ic_stock_opname_tank_rest"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="9.5dp"
                        android:paddingHorizontal="15dp"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_700"
                        android:lineHeight="18sp"
                        android:letterSpacing="0.08"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="LOSSES"/>
                    <TextView
                        android:id="@+id/tv_stock_opname_losses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/tertiary_200"
                        android:lineHeight="18sp"
                        android:letterSpacing="0.08"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="10kL (0,2%)"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/losses_claim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/neutral_100"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/primary_200"
                    app:layout_constraintTop_toBottomOf="@id/losses"
                    app:layout_constraintStart_toStartOf="@id/losses">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="9.5dp"
                        android:paddingHorizontal="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_700"
                            android:lineHeight="18sp"
                            android:letterSpacing="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="CLAIM"/>
                        <TextView
                            android:id="@+id/tv_stock_opname_losses_claim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/tertiary_200"
                            android:lineHeight="18sp"
                            android:letterSpacing="0.08"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="5kL (0,1%)"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_claim_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/neutral_400"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/losses_claim"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="*Claim Contract : 0.10%"/>

                <ImageView
                    android:id="@+id/ic_approval_has_been_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_claim_contract"
                    app:layout_constraintEnd_toEndOf="@id/tv_claim_contract"
                    android:src="@drawable/ic_success_message"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_500"
                    android:lineHeight="18sp"
                    android:letterSpacing="0.08"
                    app:layout_constraintTop_toTopOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintBottom_toBottomOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintEnd_toStartOf="@id/ic_approval_has_been_sent"
                    android:text="APPROVAL HAS BEEN SENT"/>
                <TextView
                    android:id="@+id/tv_approved_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_500"
                    android:lineHeight="18sp"
                    app:layout_constraintTop_toBottomOf="@id/ic_approval_has_been_sent"
                    app:layout_constraintEnd_toEndOf="@id/ic_approval_has_been_sent"
                    android:text="by Zayn Malik at 30/09/22, 23.00pm"/>


                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_200"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="13dp"
                    android:textSize="12sp"
                    android:lineHeight="18sp"
                    app:iconTint="@color/primary_700"
                    android:textColor="@color/primary_700"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_close"
                    android:text="CLOSE"
                    android:clickable="true"
                    app:layout_constraintTop_toBottomOf="@id/tv_approved_by"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:focusable="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/neutral_100"
                    android:outlineSpotShadowColor="@color/neutral_100"
                    android:textColor="@color/primary_700"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:lineHeight="18sp"
                    android:letterSpacing="0.08"
                    android:padding="0dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="@id/btn_close"
                    app:layout_constraintBottom_toBottomOf="@id/btn_close"
                    app:layout_constraintEnd_toStartOf="@id/btn_close"
                    android:text="@string/overview"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.cardview.widget.CardView>