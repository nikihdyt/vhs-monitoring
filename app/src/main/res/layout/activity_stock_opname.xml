<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="21.74dp"
    android:paddingHorizontal="24dp"
    tools:context=".handler.HandlerInputData"
    android:id="@+id/card_stock_opname">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary_200"
        android:elevation="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:backgroundTint="@color/primary_200"
                android:textColor="@color/neutral_500"
                android:textStyle="bold"
                android:text="STOCK OPNAME"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"/>
                <TextView
                    android:id="@+id/tv_stock_opname_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.62sp"
                    android:textStyle="bold"
                    android:lineHeight="20.4sp"
                    android:textColor="@color/primary_700"
                    android:text="September, 2022"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            <ImageView
                android:id="@+id/logo_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_customer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/view_customer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/logo_customer"
                app:layout_constraintStart_toEndOf="@id/logo_customer"
                app:layout_constraintTop_toTopOf="@id/logo_customer">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT Shell Indonesia"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Bekasi Regency, West Java 17211"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_customer_stok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Stok: Solar"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/card_overview_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16.37dp"
                android:backgroundTint="@color/primary_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_customer_info" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/stock_opname_input_tank_rest"
                android:paddingRight="32dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.46" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.76" />

                <TextView
                    android:id="@+id/tv_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Current Stock"/>
                <TextView
                    android:id="@+id/tv_current_stock_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/tertiary_200"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/tv_current_stock"
                    android:text="50kL"/>
                <ImageButton
                    android:id="@+id/btn_current_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock_amount"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_stock_amount"
                    app:layout_constraintStart_toEndOf="@id/tv_current_stock_amount"
                    android:background="@drawable/ic_current_stock"/>

                <TextView
                    android:id="@+id/tv_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q1"
                    android:text="Capacity"/>
                <TextView
                    android:id="@+id/tv_capacity_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                    app:layout_constraintStart_toStartOf="@id/tv_capacity"
                    android:text="1000kL"/>


                <TextView
                    android:id="@+id/tv_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_stock"
                    app:layout_constraintStart_toStartOf="@id/guideline_card_q2"
                    android:text="Sold"/>
                <TextView
                    android:id="@+id/tv_sold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:lineHeight="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_500"
                    app:layout_constraintTop_toBottomOf="@id/tv_sold"
                    app:layout_constraintStart_toStartOf="@id/tv_sold"
                    android:text="950kL"/>

                <ImageView
                    android:id="@+id/ic_input_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_overview_status"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_stock_amount"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_tank_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_700"
                    app:layout_constraintTop_toTopOf="@id/ic_input_tank_rest"
                    app:layout_constraintBottom_toBottomOf="@id/ic_input_tank_rest"
                    app:layout_constraintStart_toEndOf="@id/ic_input_tank_rest"
                    android:text="TANK REST"/>

                <EditText
                    android:id="@+id/et_input_data"
                    android:layout_width="146dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="11dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:background="@color/primary_200"
                    app:layout_constraintTop_toBottomOf="@id/tv_tank_rest"
                    app:layout_constraintStart_toStartOf="@id/tv_tank_rest"/>

                <ImageButton
                    android:id="@+id/btn_send_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    app:layout_constraintTop_toTopOf="@id/et_input_data"
                    app:layout_constraintBottom_toBottomOf="@id/et_input_data"
                    app:layout_constraintStart_toEndOf="@id/et_input_data"
                    android:background="@drawable/ic_send"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stock_opname_send_approval"
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.cardview.widget.CardView>