<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateStockOpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_date_text"
        android:textColor="@color/primary_700"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/stockAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateStockOpname"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/lineSeperator"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/detailStock"
            android:layout_alignBottom="@id/stockOpnameDescription"
            android:textSize="24sp"
            android:background="@color/primary_200" />

        <LinearLayout
            android:id="@+id/detailStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amountStockOpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/default_text_in_litre"
                android:textColor="@color/primary_700"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/warningIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/stockOpnameDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/detailStock"
            android:textColor="@color/tertiary_200"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </RelativeLayout>
</RelativeLayout>